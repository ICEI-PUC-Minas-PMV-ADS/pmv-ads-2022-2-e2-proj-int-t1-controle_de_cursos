@model IEnumerable<Controle.Cursos.Models.Curso>

@{
    ViewData["Title"] = "Index";
}

<h1>Cursos</h1>

@if (User.IsInRole("Admin")) {
<p>
    <a asp-action="Create">Criar um novo Curso</a>
</p>
 }
<table class="table" id="tabelaCurso">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Horario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fornecedor.NomeFantasia)

                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    }|

                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    >
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                    }|
                </td>
            </tr>
        }
    </tbody>
</table>